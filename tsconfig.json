{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "client/components/*"
      ],
      "@hooks/*": [
        "client/hooks/*"
      ],
      "@lib/*": [
        "client/lib/*"
      ],
      "@pages/*": [
        "client/pages/*"
      ],
      "@styles/*": [
        "client/styles/*"
      ],
      "@ui/*": [
        "client/components/ui/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@supabase/*": [
        "client/lib/supabase/*"
      ],
      "@env/*": [
        "client/env/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "client/**/*",
    "app/**/*",
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
